<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">


    <ch.rmbi.mels_volley.views.RmbiButtonView
        android:id="@+id/bTimeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Temps mort"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="80dip"
        android:paddingVertical="40dip"
        app:fontName="Roboto_Black"
        style="@style/button_custom"/>

    <ch.rmbi.mels_volley.views.RmbiTextView
        android:id="@+id/tvTimeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coucou"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo"
        app:fontName="Roboto_Black"
        android:onClick="onClick"
        />

    <ch.rmbi.mels_volley.views.RmbiButtonView
        android:id="@+id/bHalftime"
        style="@style/button_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:onClick="onClick"
        android:text="Half time"
        android:textSize="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:fontName="Roboto_Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="80dip"
        android:paddingVertical="40dip"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeout" />

    <ch.rmbi.mels_volley.views.RmbiTextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="SAlut"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bTimeout"
        app:fontName="Roboto_Black"
        android:onClick="onClick"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
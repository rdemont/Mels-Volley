<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ch.rmbi.mels_volley.views.RmbiButtonView
                android:id="@+id/bAttackLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Attaque Gauche"
                android:textSize="30dp"
                android:paddingVertical="20dp"

                app:fontName="Roboto_Medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ch.rmbi.mels_volley.views.RmbiNumberProgressBar
                android:id="@+id/npbAttackLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                app:textType="Second"
                app:progress_text_size="50dp"
                app:progress_text_color="@color/font_color"
                app:progress_text_offset="1dp"
                app:progress_text_visibility="visible"
                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ch.rmbi.mels_volley.views.RmbiButtonView
                android:id="@+id/bAttackRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Attaque droite"
                android:textSize="30dp"
                android:paddingVertical="20dp"
                app:fontName="Roboto_Medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ch.rmbi.mels_volley.views.RmbiNumberProgressBar
                android:id="@+id/npbAttackRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                app:textType="Second"
                app:progress_text_size="50dp"
                app:progress_text_color="@color/font_color"
                app:progress_text_offset="1dp"
                app:progress_text_visibility="visible"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <ch.rmbi.mels_volley.views.RmbiButtonView
                android:id="@+id/bService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Service"
                android:textSize="30dp"
                android:paddingVertical="20dp"
                app:fontName="Roboto_Medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ch.rmbi.mels_volley.views.RmbiNumberProgressBar
                android:id="@+id/npbService"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                app:textType="Second"
                app:progress_text_size="50dp"
                app:progress_text_color="@color/font_color"
                app:progress_text_offset="1dp"
                app:progress_text_visibility="visible"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <ch.rmbi.mels_volley.views.RmbiButtonView
                android:id="@+id/bApplause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Applaudissement"
                android:textSize="30dp"
                app:fontName="Roboto_Medium"
                android:paddingVertical="20dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ch.rmbi.mels_volley.views.RmbiNumberProgressBar
                android:id="@+id/npbApplause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                app:textType="Second"
                app:progress_text_size="50dp"
                app:progress_text_color="@color/font_color"
                app:progress_text_offset="1dp"
                app:progress_text_visibility="visible"
                />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>

